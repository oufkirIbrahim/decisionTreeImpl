<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fsoteam.ml.decisiontreeimpl.Controller">
    <top>
        <HBox spacing="10" padding="10">
            <children>
                <Button fx:id="loadButton" text="Load Dataset" onAction="#onLoadButtonClick"/>
                <Button fx:id="trainButton" text="Train Model" onAction="#onTrainButtonClick"/>
            </children>
        </HBox>
    </top>
    <center>
        <GridPane hgap="10" vgap="10" padding="10">
            <children>
                <Label text="Evaluation Method:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="evaluationMethodComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Use training dataset"/>
                            <String fx:value="Split dataset"/>
                            <String fx:value="Cross-validation"/>
                            <String fx:value="Predict instance"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label text="Test Percentage:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="percentageField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Cross-validation Folds:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="crossValidationField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Instance Attributes:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="instanceAttributesField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Button fx:id="evaluateButton" text="Evaluate" onAction="#onEvaluateButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </children>
        </GridPane>
    </center>
    <bottom>
        <VBox padding="10">
            <children>
                <Label fx:id="statusLabel" text="Status: Ready"/>
                <TextArea fx:id="outputArea" prefRowCount="10"/>
            </children>
        </VBox>
    </bottom>
</BorderPane>
